<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.OrderDetailsActivity">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar"
        android:background="@color/primary_dark"
        android:gravity="center"
        android:text="جزئیات سفارش"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/actionBar"
        android:layout_height="@dimen/actionBar"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/titleTxt"
        app:layout_constraintStart_toStartOf="@id/titleTxt"
        app:layout_constraintTop_toTopOf="@id/titleTxt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTxt"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/submit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"
            android:gravity="right"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"

            android:gravity="right"/>
        <TextView
            android:id="@+id/name_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"

            android:gravity="right"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"

            android:gravity="right"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"

            android:gravity="right"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irfontnumlight"
            android:textSize="16sp"
            android:padding="@dimen/padding_order_details"
            android:gravity="right"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="200dp"
        android:layout_height="355dp"
        app:layout_constraintTop_toBottomOf="@id/titleTxt"
        app:layout_constraintStart_toStartOf="parent"/>



    <hivatec.ir.hivatectools.views.HivaButton
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/Red"
        app:heightPadding="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:radius="0dp"
        app:text="لغو سفارش" />

</androidx.constraintlayout.widget.ConstraintLayout>